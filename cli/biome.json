{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100,
		"ignore": []
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "all"
		}
	},
	"files": {
		"ignore": ["dist/**", "node_modules/**"]
	}
}
